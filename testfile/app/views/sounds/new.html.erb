<% if !@sound.errors.empty? %>
   <div class = "alert alert-error">

      <ul>
         <% @sound.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>

   </div>
<% end %>

<a href="/sounds">Home</a>
