<h1>Sample Space</h1>
<br />

<%= link_to "New Sound", new_hat_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Sound</th>
         <th>Play Sound</th>
         <th> </th>
      </tr>
   </thead>

   <tbody>
      <% @hats.each do |hat| %>

         <tr>
            <td><%= hat.name %></td>
            <td><%= link_to "Play", hat.attachment_url %></td>
            <td><%= button_to "Delete",  hat, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{hat.name}?" %></td>
         </tr>

      <% end %>


   </tbody>

</table>
