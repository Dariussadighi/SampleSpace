      </div>
   </nav>

   <% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
   <% end %>

<div class="middle">

  <form id="search">
    <h1>Search claps by name:</h1>
    <input type="search" id="search-keyword">
    <select id="search-type">
      <option id="artist" value="artist">Search by Artist</option>
      <option id="track" value="track">Search by Track</option>
    </select>
 <!--    <input id="submit" type="submit" value="Submit"> -->
  </form>
  <br>

   <%= link_to "New Sound", new_clap_path, class: "btn btn-primary" %>
<br>



<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Sound</th>
         <th>Play Sound</th>
         <th>Download Sound</th>
         <th> </th>
      </tr>
   </thead>
   <tbody>
      <% @claps.each do |clap| %>
         <tr>
            <td><%= clap.name %></td>
            <td><%= link_to "Play", clap.attachment_url %></td>
            <td><a href=<%=clap.attachment_url%> download>Download</a></td>
            <td><%= button_to "Delete",  clap, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{clap.name}?" %></td>
         </tr>
      <% end %>
   </tbody>
</table>
</div>

